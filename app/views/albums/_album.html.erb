<% @albums.each do |album| %>
  <div class="col-lg-3 col-md-4 col-xs-6 thumb">

      <% if album.attachment? %>
        <%=link_to album_path(album) do %>
          <%= image_tag album.attachment_url , size: "400x200", :class => "img-responsive" %>
        <% end %>
      <% else %>
        <%= image_tag '150x200' , :class => "img-responsive" %>
      <% end %>
        <%= album.name %>
        <% if current_user == album.user %>
          <%= link_to 'Show', album_path(album), class: "btn btn-success" %>
          <%= link_to 'Edit', edit_album_path(album), class: "btn btn-success" %>
          <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <% else %>
          <%= link_to 'Show', album_path(album), class: "btn" %>
        <% end %>

  </div>
<% end %>
