<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @album.name %>
</p>
<%= link_to "Images", album_images_path(@album), class: "btn btn-primary" %>

<% if current_user == @album.user %>
  <%= link_to "New Image", new_album_image_path(@album), class: "btn btn-primary" %>
<% end %>

<pre>
<% if current_user %>
  <%= link_to 'Edit', edit_album_path(@album) %>
  <%= link_to 'Back', albums_path %>
<% else %>
  <%= link_to 'Back', albums_path %>
<% end %>
</pre>
