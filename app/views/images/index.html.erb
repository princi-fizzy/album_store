<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />

<h1><b><%= @album.name %></b></h1>

<pre>
  <%= link_to "Back", albums_path, class: "btn btn-primary" %>
<% if current_user == @album.user %>
  <%= link_to "New Image", new_album_image_path, class: "btn btn-primary" %>
<% end %>
</pre>

<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Images</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.name %></td>
        <td><%= image_tag image.attachment_url %></td>
        <% if current_user == @album.user %>
        <td><%= button_to "Delete",  [image.album, image], method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{image.name}?" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
